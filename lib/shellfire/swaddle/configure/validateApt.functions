core_usesIn configure
core_usesIn configure validateDeb

core_snippet_embed raw validate_apt_language
configure_validateAptLanguage()
{
	configure_validateValue validate_apt_language "$1"
}

core_snippet_embed raw validate_apt_architecture
configure_validateAptArchitecture()
{
	configure_validateValue validate_apt_architecture "$1"
}

configure_validateAptCompression()
{
	if [ "$1" = 'none' ]; then
		return 0
	fi
	
	configure_validateDebCompression "$1"
}
