core_usesIn core variable

swaddle_validate_temporaryPath()
{
	local code=$1
	local category="$2"
	local name="$3"
	local value="$4"
	
	if core_variable_doesNotStartWith "$value" '/'; then
		core_exitError $code "The $category '$name' must be an absolute path to work with rpmbuild, not '$value'"
	fi
	
	core_validate_folderPathIsReadableAndSearchableAndWritableOrCanBeCreated $code "$category" "$name" "$value"
}
