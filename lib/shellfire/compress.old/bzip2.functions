core_dependency_requires '*' pbzip2 touch
swaddle_compress_bzip2()
{
	if core_compatibility_whichNoOutput bzip2; then
		bzip2 -9 -c -q -f "$1" >"$1".bz2
	else
		# Parallel bzip has worse compression
		pbzip2 -9 -c -q -f "$1" >"$1".bz2
	fi
	touch -r "$1" "$1".bz2
}
